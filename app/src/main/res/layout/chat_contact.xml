<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="18dp"
    android:layout_marginVertical="7dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?cardBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:orientation="horizontal">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat_contact_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:src="@mipmap/mdi_account"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/chat_contact_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name2"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/chat_contact_last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello I found smthg that you lost"
                android:textSize="11sp"
                android:maxWidth="200dp"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <TextView
            android:id="@+id/chat_contact_time_last_messaged"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:text="23:53 pm"
            android:textSize="9dp"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>
</LinearLayout>