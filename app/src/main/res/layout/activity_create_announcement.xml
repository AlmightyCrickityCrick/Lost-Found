<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateAnnouncementActivity"
    android:background="?backgroundColor">
    <include layout="@layout/toolbar_create_announcement"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/title_input"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textMultiLine"
        android:hint="@string/title"
        android:textSize="14sp"
        android:textColorHint="?textColorNormal"
        android:background="?inputColor"
        android:scrollbars="vertical"
        android:minLines="5"
        android:gravity="start"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/details_input"
        android:layout_width="360dp"
        android:layout_height="240dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/title_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textMultiLine"
        android:hint="@string/details"
        android:textSize="14sp"
        android:textColorHint="?textColorNormal"
        android:background="?inputColor"
        android:scrollbars="vertical"
        android:minLines="5"
        android:gravity="start"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/btn_ann_add_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/details_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:text="Upload Image"
        android:textColor="?textColorLight"/>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/btn_ann_add_pic"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Announcement Type"
            android:textColor="?textColorNormal"
            android:layout_marginBottom="7dp"/>
        <RadioGroup
            android:id="@+id/ann_type_radio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/ann_type_found"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:button="@color/white"
                android:background="@drawable/radio_selector"
                android:text="@string/found"
                android:textColor="@drawable/radio_text_selector"
                android:checked="true"
                android:paddingHorizontal="20dp"
                android:paddingVertical="0dp"
                android:layout_marginRight="12dp"
                />
            <RadioButton
                android:id="@+id/ann_type_lost"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:button="@color/white"
                android:background="@drawable/radio_selector"
                android:text="@string/lost"
                android:textColor="@drawable/radio_text_selector"
                android:checked="false"
                android:paddingHorizontal="20dp"
                android:paddingVertical="0dp"
                />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="?textColorNormal"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"/>
        <RadioGroup
            android:id="@+id/ann_loc_radio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/ann_loc_now"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:button="@color/white"
                android:background="@drawable/radio_selector"
                android:text="Your location"
                android:textColor="@drawable/radio_text_selector"
                android:checked="true"
                android:paddingHorizontal="20dp"
                android:paddingVertical="0dp"
                android:layout_marginRight="12dp"
                />
            <RadioButton
                android:id="@+id/ann_loc_pick"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:button="@color/white"
                android:background="@drawable/radio_selector"
                android:text="Choose a location"
                android:textColor="@drawable/radio_text_selector"
                android:checked="false"
                android:paddingHorizontal="20dp"
                android:paddingVertical="0dp"
                />
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Tags"
            android:paddingVertical="5dp"
            android:textColor="?textColorNormal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:button="@color/white"
            android:background="@drawable/radio_selector"
            android:text="Wallet"
            android:textColor="@drawable/radio_text_selector"
            android:checked="true"
            android:paddingHorizontal="20dp"
            android:paddingVertical="0dp"
            android:layout_marginRight="12dp"
            />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:button="@color/white"
            android:background="@drawable/radio_selector"
            android:text="+"
            android:textColor="@drawable/radio_text_selector"
            android:checked="true"
            android:paddingHorizontal="20dp"
            android:paddingVertical="0dp"
            android:layout_marginRight="12dp"
            />
        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/btn_finish_add_announcement"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_add_button"
        android:text="Ok"
        android:textSize="8sp"
        android:textColor="?textColorLight"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>