<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="18dp"
    android:layout_marginVertical="7dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/chat_contact_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?cardBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/chat_contact_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:src="@mipmap/mdi_account"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/chat_contact_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name2"
                    android:textSize="13sp"/>

            </LinearLayout>
            <Button
                android:id="@+id/chatlist_btn_accept"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical"
                app:icon="@drawable/ic_baseline_check_24"
                app:iconTint="?accentColor"
                android:backgroundTint="?cardBackground"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="20dp"
                />
            <Button
                android:id="@+id/chatlist_btn_deny"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical"
                app:icon="@drawable/ic_baseline_block_24"
                app:iconTint="@color/wine"
                android:backgroundTint="?cardBackground"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>