<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/announcement_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?cardBackground">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/announcement_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I lost My Wallet!!!"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingVertical="5dp"
                />
            <TextView
                android:id="@+id/announcement_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum! Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                android:paddingVertical="5dp"
                android:textSize="14sp"
                android:lines="3"
                android:ellipsize="end"
                android:layout_marginBottom="7dp"
                />

        </LinearLayout>
</androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btn_navigate_ann_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/see_the_announcement" />
</LinearLayout>