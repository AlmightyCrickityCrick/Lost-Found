<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?backgroundColor"
    tools:context=".activities.Dashboard">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
    <include
        android:id="@+id/ann_dash_toolbar"
        layout="@layout/dashboard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/search_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/ann_dash_toolbar">
        <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="?textColorNormal"
        app:hintTextColor="?accentColor"
        app:boxStrokeColor="?accentColor"
        app:startIconDrawable="@drawable/ic_magnifier"
        app:startIconTint="?textColorDark">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textSize="11sp"
            android:hint="@string/have_you_lost_something"
            android:textColor="?textColorDark"
            android:textColorHint="@color/black"
            android:backgroundTint="?inputColor"
            android:inputType="text"
            android:selectAllOnFocus="true"/>
        </com.google.android.material.textfield.TextInputLayout>
    <ScrollView
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/tags"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        </LinearLayout>

    </ScrollView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/announcement_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/search_space"
        />
        <Button
            android:id="@+id/btn_dashboard_add_announcement"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape_add_button"
            android:text="@string/add"
            android:textSize="22sp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            android:textColor="?textColorLight"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>